{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "backend jest",
            "program": "${workspaceFolder}/backend/node_modules/jest/bin/jest",
            "args": [
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--inspect-brk=9229"
            ],
            "port": 9229,
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/backend",
            "windows": {
                "program": "${workspaceFolder}/backend/node_modules/jest/bin/jest.cmd"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "backend website",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "nodemon", // Use nodemon
                "--inspect", // Enable Node.js inspector for debugging
                "-r",
                "ts-node/register",
                "${workspaceFolder}/backend/src/index.ts" // Path to your TypeScript file
            ],
            "sourceMaps": true, // Enable source maps support for TypeScript
            "cwd": "${workspaceFolder}/backend", // Ensure the working directory is set correctly
            "protocol": "inspector",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "common jest",
            "program": "${workspaceFolder}/common/node_modules/jest/bin/jest",
            "args": [
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--inspect-brk=9229"
            ],
            "port": 9229,
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/common",
            "windows": {
                "program": "${workspaceFolder}/common/node_modules/jest/bin/jest.cmd"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "frontend jest",
            "program": "${workspaceFolder}/frontend/node_modules/jest/bin/jest",
            "args": [
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--inspect-brk=9229"
            ],
            "port": 9229,
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/frontend",
            "windows": {
                "program": "${workspaceFolder}/frontend/node_modules/jest/bin/jest.cmd"
            }
        }
    ]
}